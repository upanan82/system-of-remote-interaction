{
    "root": true,
    "extends": ["tslint-react", "tslint-eslint-rules"],
    "compilerOptions": {
        "allowUnusedLabels": false,
        "noUnusedParameters": true
    },
    "rules": {
        "typeof-compare": true,
        "no-unnecessary-initializer": true,
        "adjacent-overload-signatures": true,
        "only-arrow-functions": [true, "allow-declarations"],
        "no-switch-case-fall-through": true,
        "no-eval": true,
        "no-any": false, 
        "forin": true,
        "no-console": [true, "debug", "info", "log", "time", "timeEnd", "trace"],
        "no-string-literal": false,
        "triple-equals": true,
        "no-use-before-declare": false,
        "no-submodule-imports": [true, "pdfjs-dist"],
        "label-position": true,
        "no-arg": true,
        "no-bitwise": true,
        "no-debugger": true,
        "no-duplicate-variable": true,
        "no-sparse-arrays": true,
        "use-isnan": true,
        "no-conditional-assignment": true,
        "radix": true,
        "switch-default": true,
        "no-empty": true,
        "no-invalid-this": true,
        "no-unused-expression": true,
        "no-unused-variable": true,
        "no-for-in-array": true,
        "no-string-throw": true,
        "no-void-expression": [true, "ignore-arrow-function-shorthand"],
        "return-undefined": true,
        "no-parameter-properties": false,
        "typedef": [false, "call-signature", "parameter", "member-variable-declaration"],
        "no-default-export": false,
        "variable-name": [true, "ban-keywords", "check-format", "allow-pascal-case", "allow-leading-underscore"],
        "callable-types": true,
        "no-shadowed-variable": true,
        "no-var-requires": false,
        "jsdoc-format": true,
        "max-file-line-count": [true, 1300],
        "max-classes-per-file": [true, 2],
        "cyclomatic-complexity": [true, 30],
        "no-empty-interface": false,
        "no-require-imports": false,
        "no-var-keyword": true,
        "prefer-const": true,
        "array-type": [true, "array"],
        "arrow-parens": [true, "ban-single-arg-parens"],
        "class-name": true,
        "comment-format": true,
        "new-parens": true,
        "no-construct": true,
        "no-inferrable-types": false,
        "no-null-keyword": false,
        "object-literal-sort-keys": false,
        "one-variable-per-declaration": true,
        "no-invalid-template-strings": true,
        "eofline": true,
        "one-line": false,
        "no-trailing-whitespace": true,
        "align": [false, "parameters", "statements"],
        "indent": [false, "spaces"],
        "no-consecutive-blank-lines": false,
        "quotemark": [true, "single", "jsx-double", "avoid-template"],
        "semicolon": [true, "always", "ignore-bound-class-methods"],
        "curly": true,
        "typedef-whitespace": false,
        "whitespace": [true, "check-branch", "check-decl", "check-operator", "check-separator", "check-type", "check-module"],
        "ban": false,
        "prefer-type-cast": false, 
        "no-internal-module": false,
        "no-angle-bracket-type-assertion": false,
        "no-namespace": true,
        "no-reference": true,
        "jsx-ban-props": [true],
        "jsx-boolean-value": false,
        "jsx-curly-spacing": [true, "never"],
        "jsx-no-bind": true,
        "jsx-no-string-ref": true,
        "jsx-no-multiline-js": false,
        "jsx-no-lambda": false,
        "jsx-self-close": true,
        "jsx-wrap-multiline": false,
        "object-curly-spacing": "always"
    }
}
